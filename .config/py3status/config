order += "net_rate"
net_rate {
    interfaces = ["enp0s25"]
    format = "{interface}: [\?color=down {down}‚Üì] [\?color=up {up}‚Üë]"
    thresholds = {
        'down': [
            (0, 'good'),
            (131072000, 'degraded'), # 50% Uplink, 125Mbit/s
            (209715200, 'bad'),      # 80% Uplink, 200Mbit/s
        ],
        'up': [
            (0, 'good'),
            (20971520, 'degraded'), # 50% Uplink, 20Mbit/s
            (33554432, 'bad'),      # 80% Uplink, 32Mbit/s
        ],
    }
}
